<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Horario">

    <TableLayout
        android:id="@+id/table"
        android:layout_width="368dp"
        android:layout_height="499dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lunes"
                android:layout_width="@dimen/days_width"
                android:layout_height="@dimen/days_height"
                android:gravity="center"
                android:text="Lunes" />

            <TextView
                android:id="@+id/martes"
                android:layout_width="@dimen/days_width"
                android:layout_height="@dimen/days_height"
                android:gravity="center"
                android:text="Martes" />

            <TextView
                android:id="@+id/miercoles"
                android:layout_width="@dimen/days_width"
                android:layout_height="@dimen/days_height"
                android:gravity="center"
                android:text="Miercoloes" />

            <TextView
                android:id="@+id/jueves"
                android:layout_width="@dimen/days_width"
                android:layout_height="@dimen/days_height"
                android:gravity="center"
                android:text="Jueves" />

            <TextView
                android:id="@+id/viernes"
                android:layout_width="@dimen/days_width"
                android:layout_height="@dimen/days_height"
                android:gravity="center"
                android:text="Viernes" />

        </TableRow>


    </TableLayout>

</android.support.constraint.ConstraintLayout>